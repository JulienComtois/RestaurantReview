@model IEnumerable<RestaurantReview.Models.Restaurant>

@{
	ViewBag.Title = "Nearest";
}

<h3>Five closest restaurants to you</h3>

<table class="table" id="nearestRestaurants">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            Review Count
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Average_Rating)
        </th>
    </tr>

    @foreach (var item in Model)
	{
        <tr>
            <td>
				@Html.ActionLink(item.Name, "Details", "Restaurants", new { id = item.Restaurant_Id }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
			<td>
				@{ string price = ""; }
				@for (var ctr = 0; ctr < item.Price; ctr++)
				{
					price += "$";
				}
				@price
			</td>
			<td> 
				@item.Reviews.Count()
			</td>
            <td>
                @Html.DisplayFor(modelItem => item.Average_Rating)
               
            </td>
        </tr> 
    }
</table>
